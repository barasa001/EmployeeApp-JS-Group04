
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Employees</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Employee</h2>
            <span class="text-light">Use the below form to Update an Employee</span>
        </div>

        <!-- add Employee form -->
         <!-- form handling -->
         <form method="POST" id="update_employee">
            <div class="new_employee">   
                <div class="form-group">
                    <label for="id" class="text-light">ID</label>
                    <input type="hidden" name="id" value="<%= employee.id %>">
                    <input type="text" name="id" value="<%= employee.id %>" placeholder="Employee ID" readonly>
                </div>
                     
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="text" name="name" value="<%= employee.name %>" placeholder="Mark Stoenis">
                </div>
                <div class="form-group">
                    <label for="department" class="text-light">Department</label>
                    <input type="text" name="department" value="<%= employee.department %>" placeholder="Employee Department">
                </div>
                <div class="form-group">
                    <label for="salary" class="text-light">Salary</label>
                    <input type="number" name="salary" value="<%= employee.salary %>" placeholder="Employee Salary">
                </div>        
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
        
            </div>
        </form>        
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->